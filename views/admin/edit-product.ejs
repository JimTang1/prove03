<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= product.title %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" value="<% if (editing) { %><%= product.price %><% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <input type="text" name="description" id="description" value="<% if (editing) { %><%= product.description %><% } %>">
            </div>
            <div class="form-control">
                <label for="rating">Rating</label>
                <input type="range" id="rating" name="rating" min="1" max="5" value="<% if (editing) { %><%= product.rating %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
            <% } %>    
            <button class="btn" type="submit">
                <% if (editing) { %>
                     Update Product 
                <% }else { %>
                    Add Product</button>
                <% } %>
        </form>
    </main>


<%- include('../includes/end.ejs') %>